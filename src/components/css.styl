// 横屏
@media (orientation: landscape) {
   html {
     font-size: 55.2px !important
   }
   .bb-item {
    width: 100%;
    overflow: hidden;
  }
    .bb-div {
      width: 100%;
      top: 5.4rem;
      left: 0;
      position absolute
      height: 1.6rem
      z-index: 99
    }
    .page {
      width: 50%
      float: left;
      height: 7rem;
      overflow hidden
    }
}
// 竖屏
@media (orientation: portrait) {
   .bb-item {
    width: 100%;
    overflow: hidden;
  }
}
  .bb-bookblock {
    position: relative;
    width: 100%;
    height: 7rem;
    img {
      height: 5.4rem;
      width: 100%;
    }
  }
  img {
    display block
  }

    .swiper-slide {
      padding: 10px 50px;
      box-sizing border-box
    }


